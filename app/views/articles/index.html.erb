<% content_for :title do %>
	<title>Rails Note : Liste des articles</title>
<% end %>

<h1>Listing articles</h1>
 
<table>
  <tr style="border:1px solid red">
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Voir', article_path(article) %></td>
		<td><%= link_to 'Editer', edit_article_path(article) %></td>	  
		<td><%= button_to "delete", article_path(article), :method=>:delete, :class=>:destroy, data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Nouvel article', new_article_path %>


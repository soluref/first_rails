<%= form_for :produit, url: produits_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :prix %><br>
    <%= f.text_field :prix %>
  </p>

  <p>
    <%= f.label :quantite %><br>
    <%= f.text_field :quantite %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

